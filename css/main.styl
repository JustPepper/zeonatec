/* Contact form */

.overlay
	background rgba(black, .40)
	size(100%)
	z-index 998
	position fixed
	top 0
	left 0

.form-popup
	position fixed
	size(100%)
	top 0
	left 0
	display none
	z-index 999
	animation-duration: 750ms;
	.form-wrapper
		display flex
		justify-content center
		align-items center
		size(100%)
		position absolute
	.form
		background white
		padding 1rem
		overflow-y auto
		position relative
		z-index 999
		size(90%)
		max-width 450px
		box-shadow 0px 1px 5px rgba(black, .25)
		.close
			size(25px)
			line-height 25px
			position absolute
			top 10px
			right 10px
			display block
			cursor pointer
			text-align center
			border 1px dashed verde_claro
			transition all 250ms
			&:hover
				background verde_claro
				svg
					fill white
			svg
				size(20px)
				margin-top -5px
				fill verde
				vertical-align middle
		@media screen and (min-width: 480px)
			height auto
			padding 20px
		hr
			background rgba(black, .10)
			border 0
			size(100%, 1px)
			margin 1em 0
		span
			font-size em(20px)
			display block
			@media screen and (min-width: 768px)
				margin-bottom 20px
		nav
			text-align left
			ul
				li
					line-height 30px
					position relative
					font-size em(14px)
					padding-left 35px
					&:after
						content ""
						display block
						position absolute
						size(30px)
						background url('../img/css-sprites.svg') no-repeat
						left 0
						top 0
					&:nth-child(2)
						&:after
							background-position 0 -30px
					&:nth-child(3)
						&:after
							background-position 0 -60px
					&:nth-child(4)
						&:after
							background-position 0 -90px
		form
			input
			textarea
			button
				-webkit-appearance: none;
			input
			textarea
				width 100%
				border-radius 0
				margin-bottom 10px
				border 1px solid rgba(black, .10)
				font-family 'Source Sans Pro'
				font-weight 300
				padding-left 5px
			input
			button
				line-height 30px
			textarea
				resize none
			button
				background verde
				color white
				border 0
				width 100px
				
.carousel 
	margin 1rem 0		
