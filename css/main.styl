@import '../lib/index'
@import 'animate'

reset()
box-reset()

/* Colores */

verde_claro = #ccdca9
verde = #8bac44
verde_oscuro = #33412d
gris = #f1f2f2



/* Useful classes */

.center-text
	text-align center

.right-text
	text-align right

.left-text
	text-align left 
	
.title
	font-family: 'Roboto Condensed', sans-serif;
	margin 1rem 0
	@media screen and (min-width: 700px)
		margin 0
	
.text
	font-family: 'Source Sans Pro', sans-serif;
	font-weight 300
	
.grid
	display flex
	flex-wrap wrap

.v-center
	align-content center
	align-items center

.fixed
	position fixed !important
	top 0
	height 50px !important
	box-shadow 0px 1px 3px rgba(black, .25)
	.main-logo
		a
			padding 5px 0
			display block
			height 100%
			img
				height 100%

/* Main code */

a[href*=".html"]
	text-decoration none
	color #333
	font-family: 'Roboto Condensed', sans-serif;

h1[class*="text"]
	max-width 550px
	margin 2em auto
	padding 0 1em
	line-height 25px	
	
.container
	width 100%
	max-width 960px
	margin 0 auto
	


.top-bar
	background verde_claro
	size(100%, 10px)
	padding 0 1em
	a
		size(37px)
		display inline-block
		line-height 37px
		svg
			size(50%)
			vertical-align middle
			fill verde

header
	size(100%, 80px)
	padding 0 10px
	z-index 800
	position relative
	background white
	transition height 200ms ease-in-out
	.container
		align-items center
		@media screen and (min-width:768px)
			justify-content space-between
	.main-logo
		height 30px
		@media screen and (min-width:1024px)
			height 40px
		img
			height 100%
	nav
		display none
		ul
			li
				position relative
				cursor pointer
				line-height 80px
				a
					text-decoration none
					color #333
					display block
					font-family: 'Roboto Condensed', sans-serif;
				ul
					position absolute
					display none
					flex-wrap wrap
					width 100%
					left 0
					top 60px
					background white
					box-shadow 0px 1px 2px rgba(black, .25)
					li
						width 100%
						line-height 40px
						padding 0
						text-align center
						a
							display block
							&:hover
								background verde_claro
				&:hover
					ul
						display block
							
		@media screen and (min-width:768px)
			display flex
			ul
				display flex
				li
					padding 0 10px
		@media screen and (min-width:1024px)
			ul
				li
					padding 0 20px

.banner
	size(100%, auto)
	img
		width 100%

.main-article
	section
		padding 2em 1em
		background gris
		.grid
			justify-content center
			@media screen and (min-width:768px)
				justify-content space-around
		&:nth-child(1)
			border-bottom 1px solid rgba(black, .10)
		.section-image
			circle(225px)
			overflow hidden
			img
				width 100%
		.section-text
			text-align center
			max-width 400px
			p
				line-height 20px
			@media screen and (min-width:700px)
				display flex
				flex-wrap wrap
				justify-content flex-end
				align-content  center
				text-align right
				h2
					font-size em(30px)
				p
					margin-top 1rem
			@media screen and (min-width:768px)
				p
					font-size em(18px)
					
#carbonato
	@media screen and (min-width:700px)
		.section-image
			order 2
		.section-text
			text-align left
			justify-content flex-start
	
footer
	//background gris
	padding 2em 1em
	border-top 1px solid rgba(black, .10)
	.container
		justify-content center
		@media screen and (min-width:768px)
			justify-content space-between
		.footer-content
			text-align center
			max-width 300px
			img
				height 30px
			p
				font-size em(14px)
				line-height 20px
				color #666
			a
				circle(30px)
				background verde
				line-height 30px
				margin-top 10px
				display inline-block
				@media screen and (min-width:768px)
					circle(25px)
					line-height 25px
				svg
					size(16px)
					fill white
					vertical-align  middle
			@media screen and (min-width:768px)
				order 2
				width 50%
				text-align right
				display flex
				flex-wrap wrap
				justify-content flex-end
				align-content center
				img
					margin-bottom 10px
				p
					max-width 300px
		nav
			order 2
			display none
			ul
				li
					line-height 30px
			@media screen and (min-width:768px)
				order 1
				display block
				
