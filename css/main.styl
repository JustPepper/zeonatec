.product-section
	display flex
	flex-wrap wrap
	justify-content center
	.btn
		margin-bottom 1rem

.productos
	width 100%

.product-title		
	width 100%
	text-align center
	font-size em(26px)
	margin-bottom 20px

.presentacion
.granulometria
